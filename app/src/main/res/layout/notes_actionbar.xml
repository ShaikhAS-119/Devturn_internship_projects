    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:text="Notes">
    </TextView>


</RelativeLayout>